<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="100dip">

	<ImageView
		android:id="@+id/songIcon"
		android:layout_width="60dip"
		android:layout_height="60dip"
		android:layout_alignParentStart="true"
		android:layout_centerVertical="true"
		android:layout_margin="4dp"
		android:scaleType="fitCenter"
		app:srcCompat="@drawable/blank_icon"
		tools:layout_centerVertical="true" />

	<LinearLayout
		android:id="@+id/songlisticonsection"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_centerVertical="true"
		android:layoutDirection="rtl"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/beaticon"
			android:layout_width="60dip"
			android:layout_height="60dip"
			android:layout_margin="4dip"
			android:contentDescription="@string/pointlessString"
			android:scaleType="fitCenter"
			android:src="@drawable/ic_bass_drum" />

		<ImageView
			android:id="@+id/smoothicon"
			android:layout_width="60dip"
			android:layout_height="60dip"
			android:layout_margin="4dip"
			android:contentDescription="@string/pointlessString"
			android:scaleType="fitCenter"
			android:src="@drawable/ic_document" />

		<ImageView
			android:id="@+id/musicicon"
			android:layout_width="60dip"
			android:layout_height="60dip"
			android:layout_margin="4dip"
			android:contentDescription="@string/pointlessString"
			android:src="@drawable/ic_musical_notes" />
	</LinearLayout>

	<TextView
		android:id="@+id/songartist"
		android:layout_width="fill_parent"
		android:layout_height="40dip"
		android:layout_alignParentBottom="true"
		android:layout_marginTop="0dp"
		android:layout_toStartOf="@id/songlisticonsection"
		android:layout_toEndOf="@id/songIcon"
		android:ellipsize="end"
		android:maxLines="1"
		android:textSize="24sp" />

	<TextView
		android:id="@+id/songtitle"
		android:layout_width="fill_parent"
		android:layout_height="60dip"
		android:layout_alignWithParentIfMissing="true"
		android:layout_above="@id/songartist"
		android:layout_alignParentTop="true"
		android:layout_marginBottom="0dp"
		android:layout_toStartOf="@id/songlisticonsection"
		android:layout_toEndOf="@id/songIcon"
		android:ellipsize="end"
		android:gravity="center_vertical"
		android:maxLines="1"
		android:textSize="36sp" />

</RelativeLayout>